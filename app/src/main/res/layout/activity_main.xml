<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--id는 액티비티 코드로 가져가기 위해 사용한다.
    layout_margin은 뷰와 뷰 사이의 간격이며
    padding은 뷰의 콘텐츠와 테두리 사이의 간격이다. 책 p.156-->

    <Button
        android:id="@+id/ProfileButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:text="Profile"
        android:textSize="25dp"
        android:fontFamily="@font/cafesurround"
        android:layout_margin="70dp" />

    <Button
        android:id="@+id/DailyHealthRecordsButton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Daily 건강기록"
        android:textSize="20dp"
        android:fontFamily="@font/cafesurround"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/CalenderButton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="캘린더"
        android:textSize="20dp"
        android:fontFamily="@font/cafesurround"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/BodyCheckButton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="몸 상태 변화"
        android:textSize="20dp"
        android:fontFamily="@font/cafesurround"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/RecommendationButton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="추천"
        android:textSize="20dp"
        android:fontFamily="@font/cafesurround"
        android:textStyle="bold"
        android:layout_margin="10dp" />

</LinearLayout>